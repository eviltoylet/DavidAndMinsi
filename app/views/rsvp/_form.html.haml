%form{:action => "/rsvp/update", :method => "post"}
  %input{ :name => "rsvp[user]", :id => "rsvp[user]", :type => "hidden", :value => "#{@rsvp.user}" }

  - getmapping.each do |key, value|
    .input-prepend
      .add-on= value
      %input.span2{ :type => "text", :id => "rsvp[words][#{key}]", :name => "rsvp[words][#{key}]", :value => "#{@rsvp.words[key]}",
      :placeholder => value }
    %br
  %button.btn.btn-primary{ :type => "submit" }
    %i.icon-download-alt
    save

